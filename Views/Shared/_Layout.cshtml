<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkplaceManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/WorkplaceManagementSystem.styles.css" asp-append-version="true" />
    @await Html.PartialAsync("_Favicons")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Workplace Management System</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          @if (User.Identity.IsAuthenticated)
            {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="EmployeeInfo" asp-action="Index">Employee Information</a>
            </li>
            }
        </li>
        <li class="nav-item">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="EmployeeTasks" asp-action="Index">Tasks</a>
                </li>
            }
        </li>
        <li class="nav-item">
            @if (User.Identity.IsAuthenticated) 
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Rewards" asp-action="Index">Rewards</a>
                </li>
            }
        </li>
        <li class="nav-item">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                </li>
            }
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Feedback" asp-action="Index">Feedback</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
          </div>
        </li>
      </ul>
                    <partial name="_LoginPartial" />
    </div>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <br>
    <footer class="fixed-bottom border-top">
        <div class="container">
            &copy; 2022 - Workplace Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br /><a target="_blank" href="https://icons8.com/icon/QIbyIY463e7g/workplace">Workplace</a> icon by <a target="_blank" href="https://icons8.com">Icons8</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
