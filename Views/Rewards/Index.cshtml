@model IEnumerable<Rewards>
@{
    ViewData["Title"] = "Index";
}

<h1>Rewards</h1>

<div class="container p-2">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Rewards List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Rewards" asp-action="Create" class="btn btn-primary">Add New Reward</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Reward</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Reward
                </td>
                <td width="75%">
                    @obj.RewardDescription
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Rewards" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Rewards" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>