@model Rewards

@{
    ViewData["Title"] = "Update Reward";
}

<form method="post">
    <div class="border p-2 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Update Reward</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="Reward">Reward</label>
            <input asp-for="Reward" class="form-control" />
            <span asp-validation-for="Reward" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RewardDescription">Description</label>
            <input asp-for="RewardDescription" class="form-control" />
            <span asp-validation-for="RewardDescription" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mx-2"><i class="bi bi-check2-circle"></i> &nbsp;Update</button>
        <a asp-controller="Rewards" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-right"></i> &nbsp; Rewards</a>
    </div>
</form>

