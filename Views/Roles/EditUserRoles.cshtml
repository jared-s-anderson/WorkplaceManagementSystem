@model List<UserRolesModel>
@{
    ViewData["Title"] = "EditUserRoles";
    var roleId = ViewData["roleId"];
    var roleName = ViewData["roleName"];
}

<form method="post">
    <div class="border p-2 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Add/Remove Users</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-label" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" stlye="width:150px" asp-controller="Roles" asp-action="EditUserRoles">Update</button>
            <a asp-controller="Roles" asp-action="Index" asp-route-id="@roleId" class="btn btn-secondary" style="width:150px">Return to Roles</a>
        </div>
    </div>

</form>
