@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1>Role Management</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Add Role</a>

@if (Model.Any())
{
    <table class="table col-3">
        <thead>
            <tr>
                <td><h3>Roles</h3></td>
                <td></td>

            </tr>
        </thead>
        @foreach (var role in Model)
        {
            <tbody>
                <tr>
                    <td>@role.Name</td>
                    <td class="text-center">
                        <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else 
{
    <h3 class="text-danger">No roles were discovered.</h3>
}
