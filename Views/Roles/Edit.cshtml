@model WorkplaceManagementSystem.Models.EditRolesViewModel

@{
    ViewData["Title"] = "Edit Roles";
}

<h1>Edit</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="border p-2 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Role</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="RoleName">Name</label>
            <input asp-for="RoleName" type="text" class="form-control" required/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mx-2"><i class="bi bi-check2-circle"></i> &nbsp; Update</button>
        <a asp-controller="Roles" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-right"></i> &nbsp; Roles</a>
    </div>
    <br />
    <div class="mb-3">
        <h3>Users with @Model.RoleName role</h3>
        <table class="table table-bordered table-striped" style="width:100%">
                <tr></tr>
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="form-label">@user</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="formlabel">There are no users with @Model.RoleName roles.</td>
                    </tr>
                }
        </table>
        <div>
            <a asp-controller="Roles" asp-action="EditUserRoles" asp-route-id="@Model.Id" class="btn btn-primary"><i class="bi bi-plus-slash-minus"></i> &nbsp; Edit User Roles</a>
        </div>
    </div>
</form>