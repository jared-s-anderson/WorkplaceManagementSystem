@model RolesViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post">
    <div class="border p-2 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Create Role</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="RoleName">Role</label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mx-2"><i class="bi bi-plus-circle"></i> &nbsp; Add Role</button>
        <a asp-controller="Roles" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-right"></i> &nbsp; Roles</a>
    </div>
</form>