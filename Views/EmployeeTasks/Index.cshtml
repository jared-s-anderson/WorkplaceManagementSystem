@model IEnumerable<EmployeeTasks>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee Tasks</h1>

<div class="container p-2">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmployeeTasks" asp-action="Create" class="btn btn-primary">Add New Task</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Created Date</th>
            <th>Completion Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) 
        {
            <tr>
                <td width="25%">
                    @obj.TaskName
                </td>
                <td width="25%">
                    @obj.TaskDescription
                </td>
                <td width="25%">
                    @obj.TaskDate
                </td>
                <td width="25%">
                    @obj.IsCompleted
                </td>
            </tr>
        }
    </tbody>
</table>