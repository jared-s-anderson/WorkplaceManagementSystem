@model EmployeeInfo

@{
    ViewData["Title"] = "Update Employee Info";
}

<form method="post">
    <div class="border p-2 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Update Employee Info</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" required/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="number" class="form-control" required/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address">Home Address</label>
            <input asp-for="Address" type="text" class="form-control" required/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="YearsAtWork">Company Years</label>
            <input asp-for="YearsAtWork" type="number" class="form-control" required/>
            <span asp-validation-for="YearsAtWork" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TasksCompleted">Completed Tasks</label>
            <input asp-for="TasksCompleted" type="number" class="form-control" required/>
            <span asp-validation-for="TasksCompleted" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mx-2"><i class="bi bi-check2-circle"></i> &nbsp; Update</button>
        <a asp-controller="EmployeeInfo" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-right"></i> &nbsp; Employee Info</a>
    </div>
</form>
